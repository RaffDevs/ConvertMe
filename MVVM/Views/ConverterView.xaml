<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConvertMe.MVVM.Views.ConverterView"
             Title="ConverterView">
    <ContentPage.Resources>
        <Color x:Key="AppColor1">#10002B</Color>
        <Color x:Key="AppColor2">#240046</Color>
        <Color x:Key="AppColor3">#3C096C</Color>
        <Color x:Key="AppColor4">#5A189A</Color>
        <Color x:Key="TextColor">White</Color>
    </ContentPage.Resources>

    <Grid
        RowDefinitions="*,*">
        <Grid
            BackgroundColor="{StaticResource AppColor1}">
            <VerticalStackLayout
                VerticalOptions="Center">
                <Border
                    Stroke="Transparent">
                    <Entry
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource TextColor}"
                        FontSize="100"
                        HorizontalTextAlignment="Center"
                        Text="{Binding FromValue}"
                        ReturnCommand="{Binding ReturnCommand}"
                        Keyboard="Numeric"/>
                </Border>
                <Border 
                    Stroke="Transparent">
                    <Picker
                        HorizontalTextAlignment="Center"
                        TextColor="{StaticResource TextColor}"
                        ItemsSource="{Binding FromMeasures}"
                        SelectedItem="{Binding CurrentFromMeasure}"/>
                </Border>
            </VerticalStackLayout> 
        </Grid> 
        <Grid
            Grid.Row="1"
            BackgroundColor="{StaticResource AppColor3}"> 

            <VerticalStackLayout
                VerticalOptions="Center">
                <Border
                    Stroke="Transparent">
                    <Label
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource TextColor}"
                        Text="{Binding ToValue, StringFormat='{0:0.##}'}"
                        FontSize="100"
                        HorizontalTextAlignment="Center"
                        />
                </Border>
                <Border
                    Stroke="Transparent">
                    <Picker
                        HorizontalTextAlignment="Center"
                        TextColor="{StaticResource TextColor}"
                        ItemsSource="{Binding ToMeasures}"
                        SelectedItem="{Binding CurrentToMeasure}"/>
                </Border>
            </VerticalStackLayout> 
        </Grid> 
    </Grid>
</ContentPage>